<html>
<head>
  <style>

    table {
      font-family: arial, sans-serif;
      border-collapse: collapse;
      width: 100%;
    }

    th {
      background-color: #337ab7 ;
      color: white
    }

    td, th {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 8px;
    }

    tr:nth-child(even) {
      background-color: Aliceblue;
    }
  </style>
</head>


<div class="row">
  <aside class="col-md-4">
    <section class="area_info">
      <span><b><%= "Name:" %> </b> <%= @area.name %> </span>
      <span><b><%= "Acreage:" %></b> <%= @area.acreage %> ha </span>
      <span><b><%= "Number:" %></b> <%= @area.number %> </span>
      <span><b><%= "Organizacia:" %></b> <%= @area.owner %> </span>
      <span><b><%= "kraj:" %></b> <%= @area.region %> </span>
    </section>
  </aside>
  <% if @fish_population.any? %>

  <div class="col-md-8">
    <b> Population in area:</b>
    <body>
    <table style="width:50%">
      <tr>
        <th>Area name</th>
        <th>Fish caught</th>
          <% @fish_population.each do |record| %>
            <tr>
            <td> <%=record['name'] %> </td>
            <td> <%=record['count'] %></td>
            </tr>
          <% end %>
      </tr>
    </table>
    </body>
  </div>
    <% else %>
  No catches in this area!
    <% end %>
</div>
