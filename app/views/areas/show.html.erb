<html>

<div class="row">
  <aside class="col-md-4">
    <section class="area_info">
      <span><b><%= "Meno:" %> </b> <%= @area.name %> </span>
      <span><b><%= "Rozloha:" %></b> <%= @area.acreage %> ha </span>
      <span><b><%= "Číslo revíru:" %></b> <%= @area.number %> </span>
      <span><b><%= "Organizacia:" %></b> <%= @area.owner %> </span>
      <span><b><%= "Región:" %></b> <%= @area.region %> </span>
    </section>
  </aside>
  <% if @fish_population.any? %>

  <div class="col-md-8">
    <b> Počet rýb ulovených v revíre:</b>
    <body>
    <table style="width:50%">
      <tr>
        <th>Area name</th>
        <th>Fish caught</th>
          <% @fish_population.each do |record| %>
            <tr>
            <td> <%=record['name'] %> </td>
            <td> <%=record['count'] %></td>
            </tr>
          <% end %>
      </tr>
    </table>
    </body>
  </div>
    <% else %>
  No catches in this area!
    <% end %>
</div>
