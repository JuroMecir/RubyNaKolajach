<center>
  <h1>
    <%= @area.name %>
  </h1>
</center>

  <div class="container" align="center">
    <b>Meno revíru: </b> <%= @area.name %> <br>
    <b> Rozloha:</b> <%= @area.acreage %> ha <br>
    <b>Číslo revíru:</b> <%= @area.number %><br>
    <b>Organizácia:</b> <%= @area.owner %><br>
    <b>Región:</b> <%= @area.region %> <br>


  <% if @fish_population.any? %>
  <div class="container" align="center">
    <b> Počet rýb ulovených v revíre:</b>
    <body>
     <table style="width:50%">
        <tr>
          <th>Druh ryby</th>
          <th>Počet úlovkov</th>
            <% @fish_population.each do |record| %>
              <tr>
                <td> <%=record['name'] %> </td>
                <td> <%=record['count'] %></td>
              </tr>
            <% end %>
        </tr>
      </table>
    </body>
      </div>
    <% else %>
      <h3>O tomto revíre žiaľ nemáme žiadne záznamy. </h3>
    <% end %>
  </div>

