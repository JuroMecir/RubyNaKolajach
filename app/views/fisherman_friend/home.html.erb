<html>
<head>
  <style>

    table {
      font-family: arial, sans-serif;
      border-collapse: collapse;
      width: 100%;
    }

    th {
      background-color: #337ab7 ;
      color: white
    }

    td, th {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 8px;
    }

    tr:nth-child(even) {
      background-color: Aliceblue;
    }
  </style>
</head>



<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="catch _form">
        <%= render 'shared/catch_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Catches:</h3>
      <%= render 'shared/feed' %>
    </div>

  </div>
<% else %>
<div class="center jumbotron">
  <h1>Welcome to the Fisherman's friend</h1>

  <h2>
    We have  <%= @countu[0]['count'] %> users and  <%= @countc[0]['count'] %> catches.
  </h2>

  <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
</div>


<%end %>


