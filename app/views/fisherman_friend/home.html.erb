<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="catch _form">
        <%= render 'shared/catch_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Catches:</h3>
      <%= render 'shared/feed' %>
    </div>

  </div>
<% else %>
<div class="center jumbotron">
  <h1>Welcome to the Fisherman's friend</h1>

  <h2>
    This app will help you to find best place for your fishing trip.
  </h2>

  <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
</div>

<%= video_tag "gifik.mp4", :size => "320x240", :controls => true %>
<%end %>