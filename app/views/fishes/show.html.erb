<html>

<center>
  <h1>
    <%= @fish.name %>
  </h1>
</center>

<% if @area.any? %>
  <div class="container" align="center" >
    <b>Najväčší úlovok:</b>
    <% @largest.each do |record| %>
      <%=record['max'] %> cm
    <% end %><br>

    <b>Najťažší úlovok:</b>
      <% @heaviest.each do |record| %>
        <%=record['max'] %> kg
      <% end %><br>


    <b>Priemerná dĺžka:</b>
      <% @avgsize.each do |record| %>
        <%=record['round'] %> cm
      <% end %><br>


    <b>Priemerná váha:</b>
      <% @avgweight.each do |record| %>
        <%=record['round'] %> kg
      <% end %>


  </div>
  <div class="container" align="center">
    <body>
      <b> Najlepšie revíry na lov <%= @fish.name %>:</b>

      <table style="width:50%">
         <tr>
          <th>Revír </th>
          <th> Počet úlovkov</th>
            <% @area.each do |record| %>
              <tr>
                <td> <%=record['name'] %> </td>
                <td> <%=record['count'] %></td>
              </tr>
            <% end %>
          </tr>
      </table>
    </body>





    <body>
    <b> Najlepšia návnada pre lov  <%= @fish.name %>:</b>

    <table style="width:50%">
      <tr>
        <th>Návnada</th>
        <th> Počet úlovkov</th>
        <% @bait.each do |record| %>
        <tr>
          <td> <%=record['name'] %> </td>
          <td> <%=record['count'] %></td>
        </tr>
      <% end %>
      </tr>
    </table>
    </body>






  <body>
  <b> Najlepší spôsob lovu pre lov <%= @fish.name %>:</b>
  <table style="width:50%">
    <tr>
      <th>Spôsob lovu</th>
      <th> Počet úlovkov</th>
      <% @method.each do |record| %>
      <tr>
        <td> <%=record['name'] %> </td>
        <td> <%=record['count'] %></td>
      </tr>
    <% end %>
    </tr>
  </table>
  </body>
  </div>

<%else %>
  <div class="container" align="center">
      <h3>
          O tomto druhu ryby žiaľ nemáme žiadne údaje.
      </h3>
  </div>
<%end %>
</html>
