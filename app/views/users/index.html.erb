<% provide(:title, 'All users') %>
<h1>All users</h1>

Search for user:


<%= form_tag users_path, :method => 'get' do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag 'Search', class: "btn btn-primary"%>
<% end %>

<%= will_paginate %>
<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= link_to  'Show', user, class: "btn btn-primary" %>
      Name:<%= user.name %> <%=user.surname %>
      E-mail:<%= user.email %>
    </li>


  <% end %>

</ul>

<%= will_paginate %>
